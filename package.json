{
  "private": true,
  "name": "cucumber-tsflow-workspace",
  "description": "Workspace for cucumber-tsflow",
  "version": "2.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/timjroberts/cucumber-js-tsflow.git"
  },
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "postinstall": "lerna bootstrap",
    "precommit": "lint-staged && npm test",
    "pretest": "npm run build",
    "test": "cucumber-js --tags 'not @wip' --require cucumber-tsflow-specs/dist cucumber-tsflow-specs",
    "set-packageversion": "node .build/setPackageVersion.js"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.0.0-rc.0",
    "@types/node": "10.7.1",
    "@types/underscore": "1.8.8",
    "husky": "^1.1.3",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.2",
    "ts-node": "^8.10.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.9.7",
    "nerdbank-gitversioning": "^3.3.37"
  }
}
